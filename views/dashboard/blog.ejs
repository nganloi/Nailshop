<%- include('../layout/dashboard/head'); -%>


<body>
    <div class="blog-page">

        <!-- header sec start -->
        <%- include('../layout/dashboard/header'); -%>

        <!-- header sec end -->
        <!-- banner-sec start -->
        <section class="banner inner-banner">
            <div class="inner-shape">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="banner-text">
                                <h1 class="h1-title">Blog</h1>
                                <div class="banner-links">
                                    <ul>
                                        <li><a href="/" title="Home">Home</a> /</li>
                                        <li>Blog</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- banner-sec end -->
        <!-- blog sec start -->
        <section class="Beauty-expert about-blog blog-page">
            <div class="container lg-container">
                <div class="blog-box-list">
                    <div class="row">
                        <%for(var i = 0; i < blog.length; i++){%>
                        <div class="col-lg-4">
                            <div class="blog-box">
                                <a href="/blog/<%= blog[i].id %>">
                                <div class="blog-img">
                                    <div class="back-img" style="background-image:url('<%= blog[i].img %>')"></div>
                                </div>
                                </a>
                                <div class="blog-text">
                                    <h3 class="h3-title"><%= blog[i].name %></h3>
                                    <div class="course-content">
                                        <div class="lessons">
                                            <i class="fas fa-calendar"></i>
                                            <p><%= blog[i].time %></p>
                                        </div>
                                        <div class="time">
                                            <i class="fas fa-comment"></i>
                                            <p><%= blog[i].comment.length %> Comments</p>
                                        </div>
                                    </div>
                                    <p> <%= blog[i].describe %></p>
                                    <div class="blog-link">
                                        <a href="/blog/<%= blog[i].id %>" title="Read more">Read more</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <%}%>
                    </div>
                </div>
                <div class="product-pagination">
                    <div class="pagination" data-total-pages="<%= number %>" data-current-page="<%= page %>" data-page-type="blog">
                      <a href="" id="prev"><i class="fas fa-chevron-left"></i></a>
                      <span id="pages"></span>
                      <a href="" id="next"><i class="fas fa-chevron-right"></i></a>
                    </div>
                </div>
            </div>
        </section>
        <!-- blog sec end -->
        <!-- footer start -->
        <section class="subscribe">
            <div class="container lg-container">
                <div class="sub-sec back-img" style="background-image:url(assets/images/subscribe-bg.jpg);">
                    <div class="row">
                        <div class="col-xl-6 col-12 m-auto">
                            <div class="title">
                                <h2 class="h2-title lg-title">subscribe to get our latest updated</h2>
                            </div>
                            <div class="subscribe-from">
                                <div class="form-box">
                                    <form>
                                        <input type="email" class="form-input-2" name="email"
                                            placeholder="Email Address..." required="">
                                        <button type="submit" class="sec-btn"><span>Subscribe</span></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <%- include('../layout/dashboard/footer'); -%>

        <!-- footer end -->
    </div>
    <!-- Scroll To Top Start -->
    <%- include('../layout/dashboard/js'); -%>


</body>

</html>