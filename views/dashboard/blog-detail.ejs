<%- include('../layout/dashboard/head'); -%>


<body>
    <div class="blog-detail-page">

        <!-- header sec start -->
        <%- include('../layout/dashboard/header'); -%>

        <!-- header sec end -->
        <!-- banner-sec start -->
        <section class="banner inner-banner">
            <div class="inner-shape">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="banner-text">
                                <h1 class="h1-title">Blog Detail</h1>
                                <div class="banner-links">
                                    <ul>
                                        <li><a href="/" title="Home">Home</a> /</li>
                                        
                                        <li>Blog Detail</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- banner-sec end -->
        <!-- blog-info-detail sec -->
        <section class="service-info-detail blog-detail">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="service-info-text">
                            <div class="service-info-img back-img"
                                style="background-image:url('<%= blog.img%>');"></div>
                            <div class="course-content">
                                <div class="lessons">
                                    <i class="fas fa-calendar" aria-hidden="true"></i>
                                    <p><%= blog.time%></p>
                                </div>
                                <div class="time">
                                    <i class="fas fa-comment" aria-hidden="true"></i>
                                    <p>2 comments</p>
                                </div>
                            </div>
                            <div class="blog-text">
                                <h2 class="h2-title"><%= blog.name%> </h2>
                                <%= blog.content %>
                            </div>
                        </div>
                    </div>
                  
                </div>
            </div>
        </section>
        <section class="tag-share">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <div class="tags">
                            <h3 class="h3-title">tag</h3>
                            <div class="btns">
                                <% for(var i = 0; i< blog.tag.length;i++){%>
                                <a href="javascript:void(0);" class="tag-btn"><%= blog.tag[i].tag.name%></a>
                                <% }%> 
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="share-btns">
                            <h3 class="h3-title">Share :</h3>
                            <div class="social-icons footer-social">
                                <% for(var i = 0; i< social.length;i++){%>
                                <a href="<%= social[i].link%>" title="<%= social[i].name%>"><i class="<%= social[i].img%>"></i></a>
                                <% }%> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="comment">
            <div class="container">
                <div class="comment-boxes">
                    <div class="row">
                        <div class="col-lg-12">
                            <h3 class="h3-title">Comments (<%=blog.comment.length%>)</h3>
                        </div>
                        <% for (var i =0 ; i < blog.comment.length; i++) {%>
                        <div class="col-lg-12">
                            <div class="service-box">
                                <div class="service-icon">
                                    <img src="<%= blog.comment[0].user.img%>" alt="images" width="105" height="105">
                                </div>
                                <div class="service-text">
                                    <h3 class="h3-title"><%= blog.comment[i].user.name %></h3>
                                    <p><%= blog.comment[i].content %> </p>
                                </div>
                            </div>
                        </div>
                        <%}%>
                      
                    </div>
                </div>
            </div>
        </section>
        <section class="comment-form">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="title">
                            <h2 class="h2-title">leave a comment</h2>
                        </div>
                    </div>
                </div>
                <div class="row form-comment">
                    <div class="col-lg-12">
                        <form class="form" action="/blog/comment/<%= blog.id%>" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <textarea class="form-input-comment" cols="50" rows="20"
                                        placeholder="Type Message Here...." name="content"></textarea>
                                </div>
                                <div class="col-12">
                                    <div class="submit-btn">
                                        <button class="sec-btn" type="submit" name="submit" value="submit"> <span>Post
                                                Now</span> </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <!-- blog-info-detail sec -->
        <!-- footer start -->
        <section class="subscribe">
            <div class="container lg-container">
                <div class="sub-sec back-img" style="background-image:url(assets/images/subscribe-bg.jpg);">
                    <div class="row">
                        <div class="col-xl-6 col-12 m-auto">
                            <div class="title">
                                <h2 class="h2-title lg-title">subscribe to get our latest updated</h2>
                            </div>
                            <div class="subscribe-from">
                                <div class="form-box">
                                    <form>
                                        <input type="email" class="form-input-2" name="email"
                                            placeholder="Email Address..." required="">
                                        <button type="submit" class="sec-btn"><span>Subscribe</span></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <%- include('../layout/dashboard/footer'); -%>

        <!-- footer end -->
    </div>
    <!-- Scroll To Top Start -->
    <%- include('../layout/dashboard/js'); -%>

</body>

</html>