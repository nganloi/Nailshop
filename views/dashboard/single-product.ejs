<%- include('../layout/dashboard/head'); -%>


<body>

    <!-- header sec start -->
    <%- include('../layout/dashboard/header'); -%>

    <!-- header sec end -->
    <div class="product-detail-page">
        <!-- banner-sec start -->
        <section class="banner inner-banner">
            <div class="inner-shape">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="banner-text">
                                <div class="banner-links">
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- banner-sec end -->
        <!-- single product -->
        <section class="single-product-sec">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-5">
                        <div class="product-details-left">
                            <div class="lg-image">
                                <img src="<%=product.img[0]%>" alt="product-img">
                                <a href="<%=product.img[0]%>" class="popup-img venobox vbox-item"
                                    data-gall="myGallery" tabindex="0"><i class="fa fa-expand"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="product-detail-content">
                            <h3 class="h3-title"><%=product.name%></h3>
                            <h2 class="h2-title">$<%=product.price%>.00</h2>
                            <div class="product-text">
                                <p><%=product.describe%></p>
                            </div>
                            <table class="product-table">
                                <%if(product.active==1 && parseInt(product.discount)>0){%>
                                <tr>
                                    <td>Discount</td>
                                    <td><%=product.discount%>%</td>
                                </tr>
                                <%}%>
                                <tr>
                                    <td>stock availability</td>
                                    <td><%=product.discount%></td>
                                </tr>
                                <tr>
                                    <td>rating</td>
                                    <td>
                                        <i class="fas fa-star"></i><i class="fas fa-star"></i><i
                                            class="fas fa-star"></i><i class="fas fa-star"></i><i
                                            class="fas fa-star"></i>
                                    </td>
                                </tr>
                            </table>
                            <form action="/product/cart/<%=product.id%>" method="post">
                            <div class="row">
                                <label for="variant">Loại sản phẩm:</label>
                                <input type="text" id="variant" style="display: none;" name="product" autocomplete="off"/>
                                <ul id="options" class="options-list"></ul>
                                <div id="quantity" class="quantity">Số lượng: </div>
                              </div>
                            <div class="product-btns">
                                <div class="product-quantity">
                                    <div class="sp-quantity">
                                        <div class="container" id="quantity-product1" style=" font-size:14px; ">
                                            <div class="sp-minus fff"><a type="button" class="ddd">-</a>
                                            </div>
                                            <div class="sp-input">
                                                <input type="text" class="quantity-input1" value="1" name="quantity">
                                            </div>
                                            <div class="sp-plus1 fff"> <a type="button" class="ddd">+</a>
                                            </div>
                                        </div>
                                    </div>
                                    <a href="javascript:void(0);" class="sec-btn"><i class="fas fa-shopping-bag"></i>
                                        Buy Now</a>
                                    <button type="submit" class="sec-btn"><i
                                            class="fas fa-shopping-cart"></i>Add to Cart</button>
                                </div>
                            </form>
                                <div class="share-btns">
                                    <h3 class="h3-title">Share :</h3>
                                    <div class="social-icons footer-social">
                                        <a href="javascript:void(0);" title="Instagram"><i class="fab fa-instagram"
                                                aria-hidden="true"></i></a>
                                        <a href="javascript:void(0);" title="Facebook"><i class="fab fa-facebook-f"
                                                aria-hidden="true"></i></a>
                                        <a href="javascript:void(0);" title="Pinterest"><i class="fab fa-pinterest-p"
                                                aria-hidden="true"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- single product -->
        <!-- related product -->
        <section class="related-products">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <h2 class="h2-title">Related Products</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="related-swiper">
                            <div class="swiper-wrapper">
                                <%for(var i=0; i< dataproduct.length;i++){%>
                                <div class="swiper-slide">
                                    <div class="single-product mb-30">
                                        <div class="product-img">
                                            <a href="/product/<%=dataproduct[i].id%>">
                                                <img src="<%=dataproduct[i].img[0]%>" alt="product1">
                                            </a>
                                            
                                            <span class="descount-sticker">sold-out</span>
                                            <!-- <span class="sticker">New</span> -->
                                                  
                                            <div class="product-action d-flex justify-content-between">
                                                <a class="product-btn" href="/product/<%=dataproduct[i].id%>">Add to Cart</a>
                                                <ul class="d-flex">
                                                    <li><a href="/product/wishlist/<%=dataproduct[i].id%>"><i class="fa fa-heart-o"></i></a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="product-content">
                                            <h3><a href="/product/<%=dataproduct[i].id%>"><%=dataproduct[i].name%></a></h3>
                                            <div class="ratting">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div>
                                            <h4 class="price"><span class="new">$<%=dataproduct[i].price%>.00</span></h4>
                                        </div>
                                    </div>
                                </div>
                                <%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- related product -->
        <!-- single product-info -->
        <section class="single-product-info">
            <div class="container">
                <div class="row">
                     <div class="col-lg-12">
                        <div id="description" class="w3-container city">
                            <h2 class="h2-title">Description</h2>
                            <p><%=product.describe%></p>
                        </div>
                     </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <h2 class="h2-title">Reviews</h2>
                    </div>
                </div>
                <div class="comment-boxes">
                    <div class="row">
                        <div class="col-lg-12">
                            <div id="review" class="reviews">
                                <% for(var i=0 ; i< product.review.length; i++){%>
                                <div class="service-box">
                                    <div class="service-icon">
                                        <img src="<%=product.review[i].user.img%>" alt="expert3" width="105" height="105">
                                    </div>
                                    <div class="service-text">
                                        <h3 class="h3-title"><%=product.review[i].user.name%></h3>
                                        <p><%=product.review[i].content%></p>
                                    </div>
                                </div>
                                <%}%>
                            </div>
                        </div>
                    </div>
                </div>
                <form action="/product/review/<%=product.id%>" method="post">
                <div class="col-7">
                    <textarea class="form-input" style="height: 58px;" cols="30" name="message" rows="20" placeholder="Type Message Here...."></textarea>
                </div>
                <div class="col-7">
                    <div class="submit-btn">
                        <button type="submit" class="sec-btn"><span>Submit</span></button>
                    </div>
                </div>
                </form>
            </div>
        </section>
        <!-- single product-info -->
        <!-- footer start -->
        <section class="subscribe">
            <div class="container lg-container">
                <div class="sub-sec back-img" style="background-image:url(assets/images/subscribe-bg.jpg);">
                    <div class="row">
                        <div class="col-xl-6 col-12 m-auto">
                            <div class="title">
                                <h2 class="h2-title lg-title">subscribe to get our latest updated</h2>
                            </div>
                            <div class="subscribe-from">
                                <div class="form-box">
                                    <form>
                                        <input type="email" class="form-input-2" name="email"
                                            placeholder="Email Address..." required="">
                                        <button type="submit" class="sec-btn"><span>Subscribe</span></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <%- include('../layout/dashboard/footer'); -%>

        <!-- footer end -->
    </div>
    <!-- Scroll To Top Start -->
    <%- include('../layout/dashboard/js'); -%>

</body>

</html>